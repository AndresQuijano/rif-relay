{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "sourceMap": true,
  "include": ["./hardhat.config.ts","./scripts","src/**/*", "**/*.ts","./test", "typechain/**/*", ],
}